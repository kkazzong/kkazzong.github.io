package com.kkaboard.api.server.controller;

import java.io.File;
import java.io.IOException;

import javax.annotation.Resource;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.kkaboard.api.server.dto.input.ImageInputDto;
import com.kkaboard.api.server.service.ImageService;

@RestController
public class ImageController {

	
	@Resource(name="imageService")
	private ImageService imageService;
	
	@Value("${file.tmp.upload}")
	private String TMP_UPLOAD_PATH;
	
	@GetMapping("/image/test")
	public String test() {
		return "Hello image";
	}
	
	@PostMapping("/image/add-image")
	public int addImage(@RequestParam MultipartFile files,
						@RequestParam("title") String title) {
		ImageInputDto imageDto = new ImageInputDto();
		
		String originalFileName = files.getOriginalFilename();
		imageDto.setFile_name(originalFileName);
		
		/* file upload start */
		String file_path = TMP_UPLOAD_PATH + "/" + originalFileName;
		File dest = new File(file_path);
		try {
			files.transferTo(dest);
		} catch (IllegalStateException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		/* file upload end */
		
		imageDto.setFile_path(file_path);
		
		imageDto.setTitle(title);
		
		return imageService.addImage(imageDto);
	}
}

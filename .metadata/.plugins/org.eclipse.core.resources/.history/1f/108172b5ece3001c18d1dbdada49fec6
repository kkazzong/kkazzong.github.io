<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="replyDB">

	<select id="getReplyList" parameterType="int" resultType="ReplyOutputDto">
		select
			reply_no,
			reply,
			reply_depth,
			reply_name,
			date_format(reply_dt, '%Y-%m-%d %H:%i') as wirte_dt
		from kka_reply
		where board_no = #{board_no}
	</select>
</mapper>
